package com.itwillbs.ex;

/*
 * 학생의 점수 kor, eng, math 정보 저장하는 객체
 */

public class Student {
	
	private int kor;
	private int eng;
	private int math;

	public Student(int n, String sub) {
		switch(sub) {
		case "kr": this.kor = n; break;
		case "en": this.eng = n; break;
		case "ma": this.math = n; break;
		}
	}
	
	public Student(int kor, int eng, int math) {
		this.kor = kor;
		this.eng = eng;
		this.math = math;
	}
	
	public void setSubJect(int n, String sub) {
		switch(sub) {
		case "kr": this.kor = n; break;
		case "en": this.eng = n; break;
		case "ma": this.math = n; break;
		}
	}

	// alt shift s + r
	
	

}
